extends layout-navigator

block links
    link(rel="stylesheet", href="css/tables.css")
    link(rel="stylesheet", href="css/repository.css")
    script(src="js/repository.js")

block content
    .secondary-navigator
        .btn-group
            button.btn.btn-tools(data-toggle='modal',data-target='#modal-repository-in',data-backdrop='static') 入库
            button.btn.btn-tools 出库
    #main-container
        #table-container
            table
                thead
                    tr
                        th 商品编号
                        th 品牌名称
                        th 商品全名
                        th 型号
                        th 等级
                        th 规格
                        th 数量
                        th 成本均价
                        th 成本金额
                        th 入库日期
                        th 批次编号
                        th 备注
                tbody#table-body
    .modal#modal-repository-in(tabindex='-1')
        .modal-dialog
            .modal-content
                .modal-header
                    h5.modal-title 入库单
                    button.close(type='button',data-dismiss='modal',aria-label='Close')
                        span x
                .modal-body ...
                .modal-footer
                    button.btn.btn-secondary(type='button',data-dismiss='modal') 取消
                    button.btn.btn-primary(type='button') 确认
    